<%= render "shared/header" %>
    <%# 画面上部の「timelockの説明」部分 %>

  <div class='title-contents'>
    <div class="shadow-sm p-3 mb-5 bg-white rounded">
      <p>Timelockは時間管理できるアプリです</p>
    </div>
    <div class='service-explain text-primary'>
      <p>・todo機能 ・calender機能  ・chart機能があります</p>
    </div>
  </div>
  
  <main>
    <div class="hidden_box">
      <input type="checkbox" id="label1">
      <label for="label1">timer</label>
      <div class="hidden_show">
        <!--非表示ここから-->     
        <div class ="timer-container">
        <div id="timer">25:00</div>
        <div class="control"> 
          <div class="btn"  id="min">min</div>
          <div class="btn"  id="sec">sec</div>
          <div class="btn"  id="start">start</div>
          <div class="btn"  id="reset">reset</div>
        </div>  
        <div class="pomodoro" id="pomodoro">repeat:</div>
      </div>
      </div>
    </div>
    
    

    <div class="purchase-btn">  
      <%= form_with(model: @chart, local: true) do |f| %>

        <%= render 'shared/error_messages', model: f.object %>
        <div class="text-content">
          <%= f.text_area :task_id, class:"charts-task", id:"chart-task", placeholder:"task",min: 1, max: 10 %>
          <%= f.number_field :act_time, class:"charts-data", id:"chart-data", placeholder:"（ex.20(min))",min: 1, maxlength:5 %>
        </div>
        <div class="date-content"> 
          <ul>
            <li>
              <%= f.label :created_at, '登録日', class: 'control-label' %>
            <%= f.date_field :created_at, class: 'form-control' %>
            </li>
            <li>
              <%= f.label :created_at, '登録時間', class: 'control-label' %>
            <%= f.time_field :created_at, class: 'form-control' %>
            </li>
          </ul>
        </div>
        <div class="btn-contents">
          <%= f.submit "push" %>
          <%=link_to 'もどる', root_path, class:"back-btn" %>
        </div>
      <% end %>
    </div>
  </main>

  <div class="index">
    <h3>Topics</h3>
    <ul class="bg-info clearfix">
      <li>
          <%= link_to image_tag("image3.jpg", class:"rounded"), "#" %>
          <span class="border">
            <p class="topics-title">Chart機能</p>
            <p class="topics-date">2021.01.12</p>
            <p class="tag-news">New!</p>
          </span>
        </a>
      </li>

      <li>
        <a href="#">
          <%= link_to image_tag("image1.jpg", class:"rounded"), "#" %>
          <p class="topics-title">Calender機能</p>
          <p class="topics-date">2021.01.02</p>
          <p class="tag-news">New!</p>
        </a>
      </li>

      <li>
        <a href="#">
          <%= link_to image_tag("image2.jpg", class:"rounded"), "#" %>
          <p class="topics-title">ToDo機能</p>
          <p class="topics-date">2020.12.24</p>
          <p class="tag-news">App詳細</p>
        </a>
      </li>
    </ul>
  </div>