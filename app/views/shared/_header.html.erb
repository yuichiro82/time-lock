<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>

  <nav aria-label="breadcrumb">
   <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to image_tag("time-lock2.png", size:'130x70', class:"timer-icon"), "/" %></li>
   </ol>
  </nav>

  <div id="app">
  <!--ハンバーガーメニューのボタン-->
    <div class="hamburger_btn" v-on:click='ActiveBtn=!ActiveBtn'>
      <span class="line line_01" v-bind:class="{'btn_line01':ActiveBtn}"></span>
      <span class="line line_02" v-bind:class="{'btn_line02':ActiveBtn}"></span>
      <span class="line line_03" v-bind:class="{'btn_line03':ActiveBtn}"></span>
    </div>

    <transition name="menu">
        <div class="menu" v-show="ActiveBtn">
            <ul>
              <% if user_signed_in? %>
                <li><%= link_to current_user.name, edit_user_registration_path, class: "user-nickname" %></li>
                <li><%= link_to 'todo', "/", class: "todo-list" %></li>
                <li><%= link_to 'chart',chart_path(:user_id), class: "todo-list" %></li>
                <li><%= link_to 'calender', "/", class: "brand-list" %></li>
                <li><%= link_to 'logout', destroy_user_session_path, method: :delete, class: "logout" %></li>
                <a href="https://twitter.com/home" class="btn-social-icon-twitter"><span class="btn-social-icon-twitter__square"><i class="fa fa-twitter"></i></span></a>
              <% else %>
                <li><span class="material-icons md-24">login<%= link_to 'ログイン', new_user_session_path, class: "login" %></span></li>
                <li><span class="material-icons md-24">face<%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></span></li> 
              <% end %> 
            </ul>
        </div>
    </transition>
  </div>

  
  <script>
    var app = new Vue({
      el: '#app',
      data: {
        ActiveBtn: false
      }
    })
  </script>
  
</header>